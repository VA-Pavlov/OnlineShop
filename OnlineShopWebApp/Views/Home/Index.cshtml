@using OnlineShopWebApp.Models.ProductClasses
@model List<Product>
@{
	ViewData["Title"] = "Home Page";
}
<div class="row">
	@foreach (var product in @Model)
	{
		<div class="col-3 card shadow">
			<div class="card-body">
				<img src="/css/image/лого.png" height="300" alt="Alternate Text" />
				<a style="color:black" href="/product/index/@product.Id">
					<h5>@product.Name</h5>
				</a>
				<h5>@product.Cost руб.</h5>
				<a class="btn btn-dark" href="/bag/add?productId=@product.Id" role="button">Добавить в корзину</a>
			</div>
		</div>
	}
</div>